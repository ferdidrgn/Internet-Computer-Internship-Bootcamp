actor HesapMakinesi {
  var hucre: Int = 0;
  
  // Toplama fonksiyonu
  public func toplama(sayi: Int) : async Int {
    hucre += sayi;
    hucre;
  };

  // Çıkarma fonksiyonu
  public func cikarma(sayi: Int) : async Int {
    hucre -= sayi;
    hucre;
  };

  // Çarpma fonksiyonu
  public func carpma(sayi: Int) : async Int {
    hucre *= sayi;
    hucre;
  };

  // Bölme fonksiyonu
  public func bolme(sayi: Int) : async ?Int {
    if (sayi == 0) {
      null;
    } else {
      hucre /= sayi;
      ?hucre;
    };
  };

  // Hücreyi sıfırlama fonksiyonu
  public func temizle() : async () {
    hucre := 0;
  };
};
